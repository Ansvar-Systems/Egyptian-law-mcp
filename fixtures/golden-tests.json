{
  "$schema": "./golden-tests.schema.json",
  "version": "1.0",
  "mcp_name": "Egyptian Law MCP",
  "description": "Golden contract tests for real-ingested Egyptian legislation corpus",
  "tests": [
    {
      "id": "eg-real-001",
      "category": "article_retrieval",
      "description": "Retrieve Law 121/1982 Article 1",
      "tool": "get_provision",
      "input": {
        "document_id": "eg-law-121-1982",
        "section": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["content", "provision_ref"],
        "text_not_empty": true
      }
    },
    {
      "id": "eg-real-002",
      "category": "article_retrieval",
      "description": "Retrieve Investment Law 72/2017 Article 10",
      "tool": "get_provision",
      "input": {
        "document_id": "eg-law-72-2017",
        "section": "10"
      },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["content", "provision_ref"],
        "text_not_empty": true
      }
    },
    {
      "id": "eg-real-003",
      "category": "search",
      "description": "Arabic FTS search for investment",
      "tool": "search_legislation",
      "input": {
        "query": "االستثمار"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1
      }
    },
    {
      "id": "eg-real-004",
      "category": "search",
      "description": "Arabic FTS search for importers",
      "tool": "search_legislation",
      "input": {
        "query": "المستوردين"
      },
      "assertions": {
        "result_not_empty": true,
        "min_results": 1
      }
    },
    {
      "id": "eg-real-005",
      "category": "article_retrieval",
      "description": "Retrieve OCR-ingested Law 155/2002 Article 1",
      "tool": "get_provision",
      "input": {
        "document_id": "eg-law-155-2002",
        "section": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["content", "provision_ref"],
        "text_not_empty": true
      }
    },
    {
      "id": "eg-real-006",
      "category": "article_retrieval",
      "description": "Retrieve OCR-ingested Law 173/2023 Article 1",
      "tool": "get_provision",
      "input": {
        "document_id": "eg-law-173-2023",
        "section": "1"
      },
      "assertions": {
        "result_not_empty": true,
        "fields_present": ["content", "provision_ref"],
        "text_not_empty": true
      }
    },
    {
      "id": "eg-real-007",
      "category": "metadata",
      "description": "list_sources returns Egyptian source metadata",
      "tool": "list_sources",
      "input": {},
      "assertions": {
        "result_not_empty": true,
        "any_result_contains": ["EG", "Egypt"]
      }
    },
    {
      "id": "eg-real-008",
      "category": "negative_test",
      "description": "Non-existent law returns graceful handling",
      "tool": "get_provision",
      "input": {
        "document_id": "fictional-law-2099",
        "section": "1"
      },
      "assertions": {
        "handles_gracefully": true
      }
    }
  ]
}
